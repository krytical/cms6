{# app/Resources/views/conference/conference.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{% endblock%}

{% block body %}

    {# TODO: render username #}
    <div>
        <h3>USER ROLES </h3>
        <ul>
            {% for role in userRoles %}
                <li>
                    {{ role }}
                </li>
            {%  endfor %}
        </ul>
    </div>


    <div>
        <h3>STATUS ROLES </h3>
        <ul>
            {% for role in roles %}
                <li>
                    Name: {{ role.getName }}
                    {% if role.enabled %}
                        enabled
                        <a href="{{ path('security_roles_add_role_user', {'userID': user.id}) }}">Remove</a>
                    {% else %}
                        not enabled
                    {% endif %}

                </li>
            {%  endfor %}
        </ul>
    </div>

    <div>
        <h3>SYSTEM ROLES </h3>
        <ul>
            {% for role in systemRoles %}
                <li>
                    {{ role[0] }}
                </li>
            {%  endfor %}
        </ul>
    </div>

{% endblock body %}