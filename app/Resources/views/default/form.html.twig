<!-- This file is a template for ALL forms used in twig files. If there's anything that
     has to be included in all forms, include it here

     See http://symfony.com/doc/current/book/forms.html#global-form-theming-->

{% block form_template %}

    {# TODO: fix formatting #}

    <main class="mdl-layout__content-{{ name }}">
        <div class="page-content mdl-grid">
            <div class="mdl-layout-spacer"></div>
            <div class="mdl-card {{ name }}-card mdl-cell mdl-cell--8-col mdl-shadow--2dp">
                <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                    <h2 class="mdl-card__title-text">{{ name |capitalize }}</h2>
                </div>

                {{ form_start(form) }}

                {{ form_errors(form) }}

                {# form fields #}
                <div class="mdl-card__supporting-text">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        {{ form_row(form) }}
                    </div>
                </div>

                {# submit button #}
                <div class="mdl-card__actions mdl-card--border">
                    <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" type="submit" name="action">
                        Submit
                        <i class="material-icons">send</i>
                    </button>
                </div>
                {{ form_end(form) }}

            </div>
            <div class="mdl-layout-spacer"></div>
        </div>
    </main>

{% endblock form_template %}