{# app/Resources/views/conference/conference.html.twig #}
{% extends 'FOSUserBundle::layout.html.twig'  %}

{% block title %}Conference Creation{% endblock%}

{% block body %}

	{# TODO: fix formatting #}
	
	<main class="mdl-layout__content-create_conference">
		<div class="create_conference-content">
			<div class="mdl-card mdl-shadow--2dp">
				<div class="mdl-card__title mdl-color--primary mdl-color-text--white">
					<h2 class="mdl-card__title-text">Create New Conference</h2>
				</div>

				<form action="{{ path('_welcome') }}" method="post" {{ form_start(form) }}
					{{ form_errors(form) }}
					<div class="mdl-card__supporting-text">
						<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
							{{ form_row (form.name) }}
						</div>
						
						<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
							{{ form_row(form.location) }}
						</div>
						
						<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
							{{ form_row(form.startDate) }}
						</div>
						
						<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
							{{ form_row(form.endDate) }}
						</div>
						
						<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
							{{ form_row(form.imgName) }}
						</div>
					</div>

					{{ form_rest(form) }}
					
					<div class="mdl-card__actions mdl-card--border">
						<button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" type="submit" id="conference_submit" name="conference_submit" value="Submit">
							Create Conference
						</button>
					</div>
				</form>
			</div>
		</div>
	</main>

{% endblock body %}

{% block bootstrap_js %}
	<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	<script defer src="https://code.getmdl.io/1.1.1/material.min.js"></script>
{% endblock %}