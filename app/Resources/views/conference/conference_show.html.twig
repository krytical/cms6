{# app/Resources/views/conference/conference_show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ conf_id.name }}{% endblock%}

{% block body %}
{# Added a check in the controller instead. Conf will always be defined now. #}
{# if conf_id is defined #}
<div class="conference-cover">
	<img class="conference-cover-image" src="{{ asset('images/conference/' ~ conf_id.imageName) }}"/>
</div>

<main class="mdl-layout__content-conference-show">
	<div class="page-content mdl-grid">	
		<div class="mdl-card conference-show-card mdl-cell mdl-cell--12-col mdl-shadow--4dp">		
			<h2>{{ conf_id.name }}</h2>
			
			<!-- Conference details here -->
			<div class="mdl-card conference-details-card mdl-cell mdl-cell--12-col mdl-shadow--2dp">
			    <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
					<h2 class="mdl-card__title-text">Details</h2>
				</div>
				<div class="mdl-card__supporting-text">
					{{ conf_id.description }}
				</div>
				<ul class="conference-detail-list mdl-list">
				  <li class="mdl-list__item">
					<span class="mdl-list__item-primary-content">
					<i class="material-icons mdl-list__item-icon">room</i>
					  Location: {{ conf_id.location }}
					</span>
				  </li>
				  <li class="mdl-list__item">
					<span class="mdl-list__item-primary-content">
					<i class="material-icons mdl-list__item-icon">access_time</i>
					  Start Date: {{ conf_id.startDatetime | date("m/d/Y")}}
					</span>
				  </li>
				  <li class="mdl-list__item">
					<span class="mdl-list__item-primary-content">
					<i class="material-icons mdl-list__item-icon">access_time</i>
					  End Date: {{ conf_id.endDatetime | date("m/d/Y")}}
					</span>
				  </li>
				  <li class="mdl-list__item">
					<span class="mdl-list__item-primary-content">
					<i class="material-icons mdl-list__item-icon">local_hotel</i>
					  Hotel:
					</span>
				  </li>
				</ul>
				
				{# TODO: Remove "Join Conference" button once you joined conference #}
			  
				{# TODO: Add "Leave Conference" button after you joined the conference https://www.getmdl.io/components/index.html#buttons-section #}
				
				<div class="mdl-card__actions mdl-card--border">
					<a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="{{ path('conference_reg', {'conf_id': conf_id.id}) }}">
						Join Conference
					</a>
					<a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="{{ path('conference_edit', {'conf_id': conf_id.id}) }}">
						Edit Conference
					</a>
					<a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="{{ path('conference_delete', {'conf_id': conf_id.id}) }}" onclick="return confirm('Are you sure you want to delete this conference and its events?')">
						Delete Conference
					</a>
				</div>
			</div>

			{# TODO: Actually add events #}
            {# TODO: Add "add" events button #}
            {# TODO: Add edit and delete buttons on each event #}

			<!-- Events here -->
			<div class="mdl-card conference-events-card mdl-cell mdl-cell--12-col mdl-shadow--2dp">
			    <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
					<h2 class="mdl-card__title-text">Event 1</h2>
				</div>
				<div class="mdl-card__supporting-text">
					Details about event 1 here.
				</div>
				<div class="mdl-card__actions mdl-card--border">
					<a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="#">
						Join Event
					</a>
					<a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="#">
						Edit Event
					</a>
					<a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="#">
						Delete Event
					</a>
				</div>
			</div>			
		</div>
	</div>
</main>

{# endif #}
{% endblock %}